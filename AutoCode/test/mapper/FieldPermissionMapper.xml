<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//auto.mybatis.org//DTD Mapper 3.0//EN"
        "http://auto.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.FieldPermissionMapper">
    <!--xml config form table field_permission-->
    <resultMap id="fieldPermissionResult" type="pojo.FieldPermission">
    <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="fieldName" column="field_name"/>
        <result property="read" column="read"/>
        <result property="write" column="write"/>
    </resultMap>
    <!--查询条件语句-->
    <sql id="queryByExample">
        <where>
            <if test="pojo.id!=null">AND id=#{pojo.id}</if>
            <if test="pojo.name!=null">AND name LIKE '%${pojo.name}%'</if>
            <if test="pojo.fieldName!=null">AND field_name LIKE '%${pojo.fieldName}%'</if>
            <if test="pojo.read!=null">AND read=#{pojo.read}</if>
            <if test="pojo.write!=null">AND write=#{pojo.write}</if>
    </where>
    </sql>
    <!--更新赋值条件语句-->
    <sql id="updateSet">
        <if test="pojo.name!=null">name=#{pojo.name},</if>
        <if test="pojo.fieldName!=null">field_name=#{pojo.fieldName},</if>
        <if test="pojo.read!=null">read=#{pojo.read},</if>
        <if test="pojo.write!=null">write=#{pojo.write},</if>
    </sql>

    <select id="findById" resultMap="fieldPermissionResult">
        SELECT * FROM field_permission
        WHERE id=#{id}
    </select>

    <select id="getExampleCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM field_permission
        <include refid="queryByExample"/>
    </select>

    <select id="findByExample" resultMap="fieldPermissionResult">
        SELECT * FROM field_permission
        <include refid="queryByExample"/>
        LIMIT #{start},#{length}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="pojo.id">
        INSERT INTO field_permission
        <include refid="updateSet"/>
    </insert>

    <update id="update">
        UPDATE field_permission
        <include refid="updateSet"/>
        WHERE id=pojo.id
    </update>
    <delete id="delete">
        DELETE FROM field_permission WHERE id=#{id}
    </delete>
</mapper>