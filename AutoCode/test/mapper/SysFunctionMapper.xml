<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//auto.mybatis.org//DTD Mapper 3.0//EN"
        "http://auto.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.SysFunctionMapper">
    <!--xml config form table sys_function-->
    <resultMap id="sysFunctionResult" type="pojo.SysFunction">
    <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="info" column="info"/>
    </resultMap>
    <!--查询条件语句-->
    <sql id="queryByExample">
        <where>
            <if test="pojo.id!=null">AND id=#{pojo.id}</if>
            <if test="pojo.name!=null">AND name LIKE '%${pojo.name}%'</if>
            <if test="pojo.info!=null">AND info LIKE '%${pojo.info}%'</if>
    </where>
    </sql>
    <!--更新赋值条件语句-->
    <sql id="updateSet">
        <if test="pojo.name!=null">name=#{pojo.name},</if>
        <if test="pojo.info!=null">info=#{pojo.info},</if>
    </sql>

    <select id="findById" resultMap="sysFunctionResult">
        SELECT * FROM sys_function
        WHERE id=#{id}
    </select>

    <select id="getExampleCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM sys_function
        <include refid="queryByExample"/>
    </select>

    <select id="findByExample" resultMap="sysFunctionResult">
        SELECT * FROM sys_function
        <include refid="queryByExample"/>
        LIMIT #{start},#{length}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="pojo.id">
        INSERT INTO sys_function
        <include refid="updateSet"/>
    </insert>

    <update id="update">
        UPDATE sys_function
        <include refid="updateSet"/>
        WHERE id=pojo.id
    </update>
    <delete id="delete">
        DELETE FROM sys_function WHERE id=#{id}
    </delete>
</mapper>