<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//auto.mybatis.org//DTD Mapper 3.0//EN"
        "http://auto.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ProductLineMapper">
    <!--xml config form table product_line-->
    <resultMap id="productLineResult" type="pojo.ProductLine">
    <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="managerId" column="manager_id"/>
    </resultMap>
    <!--查询条件语句-->
    <sql id="queryByExample">
        <where>
            <if test="pojo.id!=null">AND id=#{pojo.id}</if>
            <if test="pojo.name!=null">AND name LIKE '%${pojo.name}%'</if>
            <if test="pojo.managerId!=null">AND manager_id=#{pojo.managerId}</if>
    </where>
    </sql>
    <!--更新赋值条件语句-->
    <sql id="updateSet">
        <if test="pojo.name!=null">name=#{pojo.name},</if>
        <if test="pojo.managerId!=null">manager_id=#{pojo.managerId},</if>
    </sql>

    <select id="findById" resultMap="productLineResult">
        SELECT * FROM product_line
        WHERE id=#{id}
    </select>

    <select id="getExampleCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM product_line
        <include refid="queryByExample"/>
    </select>

    <select id="findByExample" resultMap="productLineResult">
        SELECT * FROM product_line
        <include refid="queryByExample"/>
        LIMIT #{start},#{length}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="pojo.id">
        INSERT INTO product_line
        <include refid="updateSet"/>
    </insert>

    <update id="update">
        UPDATE product_line
        <include refid="updateSet"/>
        WHERE id=pojo.id
    </update>
    <delete id="delete">
        DELETE FROM product_line WHERE id=#{id}
    </delete>
</mapper>